<%= semantic_form_for(@article, :html => {:multipart => true}) do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.file_field :article_image %>
    <%= f.input :allow_comments %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
