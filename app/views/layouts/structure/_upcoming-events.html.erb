<% unless @next_three_events.empty? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Upcoming Events</h3>
  </div>
  <div class="panel-body">
    <ul class="list-group">
      <% @next_three_events.each do |event| %>
          <li class="list-group-item"><%= link_to event.title.truncate(25), event %>
            <br/>
            <%= event.time.to_formatted_s(:my_format) %> </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>