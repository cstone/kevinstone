<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Photos</li>
</ol>
<h3>Photos</h3>
<table width="100%" class="table table-bordered">
  <% @photos.each do |photo| %>
      <tr>
        <td width="20%" rowspan="2" valign="top"><%= link_to(image_tag(photo.photo_image.url(:thumb), class: 'thumbnail'), photo) %></td>
        <td width="80%"><%= link_to photo.title, photo %></td>
      </tr>
      <tr>
        <td valign="top"><%= photo.description.truncate(200) %></td>
      </tr>
  <% end %>
</table>
<%= paginate @photos %>
