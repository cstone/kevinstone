<h3><%= @event.title %></h3>
<p><%= @event.time %> <% if @event.venue %>at <%= @event.venue %><% end %></p>
<p><%= simple_format @event.description %></p>
<% if @event.url %>
    <p><%= link_to @event.url, @event.url %></p>
<% end %>
<table class="table table-bordered">
  <tr>
    <td><strong>What:</strong></td>
    <td><%= @event.title %></td>
  </tr>
  <tr>
    <td width="8%"><strong>When:</strong></td>
    <td width="92%"><%= @event.time %></td>
  </tr>
  <% if !@event.venue.empty? %>
      <tr>
        <td><strong>Where:</strong></td>
        <td><%= @event.venue %></td>
      </tr>
  <% end %>
  <% if !@event.address.empty? %>
      <tr>
        <td></td>
        <td><%= @event.address %> <%= @event.city %>, <%= @event.state %> <%= @event.zip %></td>
      </tr>
  <% end %>
  <% if !@event.description.empty? %>
  <% end %>
  <% if !@event.url.empty? %>
  <% end %>

</table>
<p class="text-right"><%= link_to 'Back to all of Kevin\'s events', events_path, class: '' %></p>
<hr>
<%= render 'layouts/structure/disqus-thread' %>




