<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to 'Videos', videos_path %></li>
  <li class="active"><%= @video.title %></li>
</ol>
<h3><%= @video.title %></h3>
<p><iframe width="640" height="360" src="//www.youtube.com/embed/<%= @video.source %>?rel=0" frameborder="0" allowfullscreen></iframe></p>
<p><small>Published <%= time_ago_in_words(@video.created_at) %> ago</small></p>
<p><%= raw(@video.description) %></p>
<p>&nbsp;</p>

<% if @video.allow_comments %>
<%= render 'layouts/structure/disqus-thread' %>
<% end %>
