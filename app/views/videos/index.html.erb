<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Videos</li>
</ol>
<h3>Videos</h3>
<% @videos.each do |video| %>
    <h4><%= link_to video.title, video %></h4>
    <p><%= raw truncate(video.description, :length => 250) %></p>
    <hr>
<% end %>
<hr>
<%= paginate @videos %>
